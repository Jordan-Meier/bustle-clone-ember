{{#if updateStoryForm}}
  <h4>Update {{story.headline}}, posted on {{story.date}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" placeholder=story.headline}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=story.date}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=story.author}}
        </div>

        <div class="form-group">
          <label for="story">Story Body</label>
          {{textarea value=story id="story" placeholder=story.story}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=story.image}}
        </div>

        <button class="btn-lg btn-default"{{action 'update' story}}>Save Updates</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateStoryForm'}}>Update</button>
{{/if}}
